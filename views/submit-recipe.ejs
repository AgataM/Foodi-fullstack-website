<div class="px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold">Submit your Recipe</h1>
    <div class="col-lg-6 mx-auto">
        <p class="lead">Share your recipe with other users. Fill out the form to get started</p>
    </div>
</div>

<div class="row justify-content-center">

<!-- SUCCESS ALERT -->
    <% if(infoSubmitObj != '') { %>

        <div class="col-8 alert alert-success" role="alert">
            <%= infoSubmitObj %>
        </div>
        <% } %>

<!-- ERROR ALERT -->
    <% if(infoErrorsObj != '') { %>

    <div class="col-8 alert alert-danger" role="alert">
        <%= infoErrorsObj[0].message %>
    </div>
    <% } %>


    <div class="col-8">

        <form action="/submit-recipe" enctype="multipart/form-data" method="POST">
            <div class="row g-3">

                <!-- <div class="col-12">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" name="email" id="email" class="form-control">
                </div> -->

                <div class="col-12">
                    <form>
                    <label for="name" class="form-label">Recipe Name</label>
                    <input type="text" name="name" id="name" class="form-control" required />
                    </form>
                </div>

                <div class="col-12">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="description" id="description" class="form-control" cols="30" rows="4" required></textarea>
                </div>

                <div class=" col-12">
                    <label for="name" class="form-label" required>Ingredients</label><br>
                    <small>Example: Salt</small>
                    <div class="ingredientList" >
                        
                        <div id="target" class="ingredientDiv mb-1" >
                            <input type="text" name="ingredients" class="form-control" required />
                        </div>
                        
                    
                        <!--<div class="ingredientDiv mb-1" >
                        
                    </div>-->
                    </div>
                </div>
                <input id="add" class="btn btn-outline-primary" type="button" value="Add New" onclick="addNew()" />
                <input id="remove" class="btn btn-outline-primary" type="button" value="Remove last element" onclick="removeLastElem()" />
                <!--<div class="col-12">
                    <button type="button" class="btn btn-outline-primary" id="addIngredientsBtn"> + Ingredient</button>
                </div>

                <div class="col-12">
                    <button type="button" class="btn btn-outline-primary" id="removeIngredientsBtn"> - Ingredient</button>
                </div> -->

                <div class="col-12">
                    <label for="category" required />Select Category</label>
                    <select name="category" class="form-select form-control" aria-label="Category">
                        <option selected>Select Category</option>
                        <option value="Rice">Rice</option>
                        <option value="Oats">Oats</option>
                        <option value="Rice Noodles">Rice Noodles</option>
                        <option value="Bananas">Bananas</option>
                        <option value="Pancakes">Pancakes</option>
                        <option value="Fish">Fish</option>
                        <option value="Fruit">Fruit</option>
                        <option value="Breakfast">Breakfast</option>
                        <option value="Lunch">Lunch</option>
                        <option value="Dinner">Dinner</option>
                    </select>
                </div>

                <div class="col-12">
                    <label for="image" >Recipe Image</label>
                    <input type="file" class="form-control" name="image" accept="image/jpg/png" required>
                </div>

                <div class="col-12">
                    <button type="submit" class="btn btn-primary"> Submit Recipe</button>
                </div>

            </div>
        </form>

    </div>
</div>